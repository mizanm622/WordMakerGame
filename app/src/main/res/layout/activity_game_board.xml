           android:layout_height="70dp"
           android:hint="F"
           android:textAlignment="center"

           />
   </TableRow>

   <TableRow
       android:id="@+id/row2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_below="@+id/row1"
       >
