          android:background="@drawable/edittextdesign"
          android:layout_margin="3dp"
          android:id="@+id/tv18"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:hint="S"
          android:textAlignment="center"

          />

      <EditText
          android:background="@drawable/edittextdesign"
          android:layout_margin="3dp"
          android:id="@+id/tv19"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:hint="T"
          android:textAlignment="center"

          />

      <EditText
          android:background="@drawable/edittextdesign"
          android:layout_margin="3dp"
